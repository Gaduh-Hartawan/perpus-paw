<%- include('../layouts/admin/header.ejs') -%> <%-
include('../layouts/admin/navbar.ejs') -%>
<div class="container">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Data Peminjaman</h1>
      </div>
  <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
              <div class="col-lg-12">
                  <div class="p-5">
                      <div class="text-center">
                          <h1 class="h4 text-gray-900 mb-4">Form Tambah Peminjaman</h1>
                      </div>
                      <form class="user" method="post" action="<%= url %>admin/peminjaman/add">
                          <div class="form-group row">
                              <div class="col-sm-12">
                                  <input type="number" name="lama_pinjam" class="form-control form-control-user" id="exampleLastName"
                                      placeholder="Masukkan Lama Peminjaman" required>
                              </div>
                          </div>
                          <div class="form-group row">
                              <div class="col-sm-6 mb-3 mb-sm-0">
                                <select name="id_anggota" class="form-control " id="">
                                    <% data.forEach(item => { %>
                                        <option value="<%= item.id_anggota %>"><%= item.nama_anggota %></option>
                                    <% }) %>
                                </select>
                              </div>
                              <div class="col-sm-6">

                                    <select name="id_buku" class="form-control " id="">
                                        <option value="1">One Piece</option>
                                        <option value="2">Laut Bercerita</option>
                                        <option value="5">Laskar Pelangi</option>
                                    </select>
                              </div>
                          </div>
                          <button type="submit" class="btn btn-primary btn-user btn-block">
                              Submit
                          </button>
                      </form>
                  </div>
              </div>
          </div>
      </div>
  </div>

</div>
<%- include('../layouts/admin/footer.ejs') -%> 