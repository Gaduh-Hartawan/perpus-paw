<%- include('../layouts/admin/header.ejs') -%> <%-
include('../layouts/admin/navbar.ejs') -%>
<div class="container">
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Data Buku</h1>
  </div>
  <div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
      <!-- Nested Row within Card Body -->
      <div class="row">
        <div class="col-lg-12">
          <div class="p-5">
            <div class="text-center">
              <h1 class="h4 text-gray-900 mb-4">Form Edit Buku</h1>
            </div>
            <form class="user" method="post" action="<%= url %>buku/edit">
              <% data.forEach(item => { %>
              <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                  <input
                    type="text"
                    name="judul"
                    class="form-control form-control-user"
                    placeholder="Masukkan Judul Buku"
                    value="<%= item.judul_buku %>"
                    required
                  />
                </div>
                <div class="col-sm-6">
                  <input
                    type="text"
                    name="penerbit"
                    class="form-control form-control-user"
                    id="exampleLastName"
                    placeholder="Masukkan Nama Penerbit"
                    value="<%= item.penerbit %>"
                    required
                  />
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                  <input
                    type="number"
                    name="tahun"
                    class="form-control form-control-user"
                    placeholder="Masukkan Tahun Terbit"
                    value="<%= item.tahun %>"
                    required
                  />
                </div>
                <div class="col-sm-6">
                  <input
                    type="text"
                    name="pengarang"
                    class="form-control form-control-user"
                    id="exampleLastName"
                    placeholder="Masukkan Nama Pengarang"
                    value="<%= item.pengarang %>"
                    required
                  />
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                  <input
                    type="number"
                    name="denda"
                    class="form-control form-control-user"
                    placeholder="Masukan Jumlah Denda"
                    value="<%= item.denda %>"
                    required
                  />
                </div>
                <div class="col-sm-6">
                  <input
                    type="number"
                    class="form-control form-control-user"
                    name="jumlah"
                    placeholder="Masukan Jumlah Buku"
                    value="<%= item.jumlah %>"
                    required
                  />
                  <input type="hidden" value="<%= id_buku %>" name="id_buku" />
                </div>
              </div>
              <% }) %>
              <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                  <select name="kategori" class="form-control">
                    <% dataKategori.forEach(item => { %>
                    <option value="<%= item.id_kategori %>">
                      <%= item.nama_kategori %>
                    </option>
                    <% }) %>
                  </select>
                </div>
                <div class="col-sm-6">
                  <select name="jenis" class="form-control">
                    <% dataJenis.forEach(item => { %>
                    <option value="<%= item.id_jenis %>">
                      <%= item.nama_jenis %>
                    </option>
                    <% }) %>
                  </select>
                </div>
              </div>
              <button type="submit" class="btn btn-primary btn-user btn-block">
                Submit
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../layouts/admin/footer.ejs') -%>
