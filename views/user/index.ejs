<%- include('../layouts/user/header.ejs') -%>
<%- include('../layouts/user/navbar.ejs') -%>
<!-- Begin Page Content -->
<div class="container-fluid">
  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
  </div>

  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Tabel Data Peminjaman</h6>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th>NIM</th>
              <th>Judul Buku</th>
              <th>tgl_peminjaman</th>
              <th>tgl_pengembalian</th>
              <th>status</th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>NIM</th>
              <th>Judul Buku</th>
              <th>tgl_peminjaman</th>
              <th>tgl_pengembalian</th>
              <th>status</th>
            </tr>
          </tfoot>
          <tbody>
            <% data.forEach(item => { %>
            <tr>
              <td><%= item.nim %></td>
              <td><%= item.judul_buku %></td>
              <% function convert(str) { var date = new Date(str), mnth = ("0" +
              (date.getMonth() + 1)).slice(-2), day = ("0" +
              date.getDate()).slice(-2); return [date.getFullYear(), mnth,
              day].join("-"); } %>
              <td><%= convert(item.tgl_pinjam) %></td>
              <td><%= item.tgl_kembali %></td>
              <td><%= item.status_pinjam %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- /.container-fluid -->
  <%- include('../layouts/user/footer.ejs') -%>
